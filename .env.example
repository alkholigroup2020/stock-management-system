# ==============================================================================
# Stock Management System - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Prisma database connection string (PostgreSQL via Supabase Transaction Pooler)
# IMPORTANT: Must use port 6543 for Transaction mode pooler
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-[REGION].pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true
# Source: Supabase Dashboard > Settings > Database > Connection string (Transaction mode)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-[REGION].pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true"

# Direct database connection (bypasses pooler) - REQUIRED for Prisma migrations
# IMPORTANT: Use port 5432 for direct connection
# Source: Supabase Dashboard > Settings > Database > Connection string (Direct connection)
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?sslmode=require"

# ==============================================================================
# SUPABASE CONFIGURATION
# ==============================================================================

# Supabase project URL
# Source: Supabase Dashboard > Settings > API > Project URL
SUPABASE_URL="https://[PROJECT-REF].supabase.co"

# Supabase anonymous (public) API key
# Safe to expose in browser - works with Row Level Security (RLS)
# Source: Supabase Dashboard > Settings > API > Project API keys > anon public
SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# Supabase service role (admin) API key
# NEVER expose to client - server-only, has full database access
# Source: Supabase Dashboard > Settings > API > Project API keys > service_role secret
SUPABASE_SERVICE_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# ==============================================================================
# AUTHENTICATION CONFIGURATION
# ==============================================================================

# Secret key for JWT token signing and session encryption
# NEVER expose to client - server-only
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
AUTH_SECRET="your-32-character-secret-key-here"

# Session password for nuxt-auth-utils (32 characters minimum)
# Generate: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
NUXT_SESSION_PASSWORD="your-32-character-session-password"

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Public base URL of the application
# Development: http://localhost:3000
# Production: https://your-app.vercel.app or your custom domain
NUXT_PUBLIC_SITE_URL="http://localhost:3000"

# Default currency for the application (ISO 4217 currency code)
# SAR = Saudi Riyal
NUXT_PUBLIC_CURRENCY="SAR"

# ==============================================================================
# EMAIL SERVICE CONFIGURATION (Office 365 SMTP)
# ==============================================================================

# SMTP user (Office 365 email address)
# This is your full email address used to authenticate with SMTP
SMTP_USER="your-email@your-domain.com"

# SMTP password (Office 365 password or app password)
# If MFA is enabled, you may need to create an app password
SMTP_PASSWORD="your-smtp-password"

# SMTP host (default: smtp.office365.com)
# Only change if using a different SMTP provider
SMTP_HOST="smtp.office365.com"

# SMTP port (default: 587 for STARTTLS)
# Office 365 typically uses port 587
SMTP_PORT="587"

# Email sender address (defaults to SMTP_USER if not set)
# Must match your SMTP_USER or an authorized alias
EMAIL_FROM="noreply@your-domain.com"
